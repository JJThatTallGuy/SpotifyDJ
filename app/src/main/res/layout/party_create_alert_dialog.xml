<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/colorForeground"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Name_input_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Party Name" />

    <EditText
        android:id="@+id/name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Name_input_title"
        android:layout_alignStart="@+id/Name_input_title"
        android:layout_below="@+id/Name_input_title"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Party Name" />

    <TextView
        android:id="@+id/password_change_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name_edit"
        android:layout_alignStart="@+id/name_edit"
        android:layout_below="@+id/name_edit"
        android:layout_marginTop="31dp"
        android:text="Password" />

    <EditText
        android:id="@+id/password_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password_change_title"
        android:layout_alignStart="@+id/password_change_title"
        android:layout_below="@+id/password_change_title"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Optional" />
</RelativeLayout>